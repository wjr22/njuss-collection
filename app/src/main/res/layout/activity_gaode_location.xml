<?xml version="1.0" encoding="utf-8"?>
<tools:LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".GaodeLocationActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 地图 -->
    <com.amap.api.maps.MapView
        android:id="@+id/gaode_location_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.amap.api.maps.MapView>

    <LinearLayout
        android:id="@+id/gpsData_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/sensorData"
        android:layout_toLeftOf="@+id/gpsData"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="55dp"
        android:padding="6dp"
        android:visibility="gone"
        android:background="@drawable/map_layer_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/state_text_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text=""
            android:textColor="@color/gray_normal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/location_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text=""
            android:textColor="@color/gray_normal"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 上方文字栏 -->
    <LinearLayout
        android:id="@+id/gps_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/map_layer_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GPS位置："
            android:textColor="@color/gray_normal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="经度："
            android:textColor="@color/gray_normal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="纬度："
            android:textColor="@color/gray_normal"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/txt_GPS_percision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="定位精度："
            android:textColor="@color/gray_normal"
            android:textSize="14sp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/gpscoor_info"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/gps_info_layout"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:gravity="right" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/map_layer_bg"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mapgps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/gray_normal"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/poiname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="@color/gray_normal"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/addressname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="@color/gray_normal"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

    <!-- 下方工具栏 -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp" >

        <Button
            android:id="@+id/btn_mapfinish"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/circle_common_green_btn_bg"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="完成采集"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>

</tools:LinearLayout>
